[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
shell_variant = bash
binary_next_line = false
switch_case_indent = true
ij_shell_switch_cases_indented = true
space_redirects = true
keep_padding = false
function_next_line = false